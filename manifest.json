{
  "manifest_version": 3,
  "name": "e621 Enhancer",
  "version": "1.1.0",
  "description": "Расширение для улучшения e621/e926: управление тегами, настройки интерфейса и дополнительные инструменты",
  "homepage_url": "https://github.com/viverna1/E621-Enhancer",
  
  "permissions": ["activeTab", "storage"],
  
  "icons": { "64": "icons/logo.png" },
  
  "action": {
    "default_icon": "icons/logo.png",
    "default_title": "e621 Enhancer",
    "default_popup": "index.html"
  },
  
  "content_scripts": [
    {
      "matches": ["*://e621.net/*", "*://e926.net/*"],
      "js": ["static/utils.js", "static/background.js"]
    }
  ],
  
  "host_permissions": [
    "*://e621.net/*",
    "*://e926.net/*"
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "e621enhancer@viverna.dev",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}